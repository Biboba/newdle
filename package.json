{
  "name": "root",
  "private": true,
  "scripts": {
    "prettier": "prettier --write 'newdle/client/src/**/*.{js,jsx,json,scss,css}'",
    "isort": "isort --recursive setup.py newdle/ tests/",
    "black": "black setup.py newdle/ tests/",
    "pycodestyle": "pycodestyle newdle/ tests/"
  },
  "lint-staged": {
    "newdle/client/src/**/*.{js,jsx,json,scss,css}": [
      "prettier --write",
      "git add"
    ],
    "{newdle,tests}/**/*.py": [
      "isort",
      "black",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  }
}
